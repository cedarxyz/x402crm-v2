{
  "name": "x402crm-v2",
  "version": "2.0.0",
  "description": "CRM for tracking and converting x402 developers to sBTC - v2 with D1 persistence",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "db:create": "wrangler d1 create x402crm-v2",
    "db:migrate": "wrangler d1 execute x402crm-v2 --local --file=./src/db/schema.sql",
    "db:migrate:remote": "wrangler d1 execute x402crm-v2 --remote --file=./src/db/schema.sql",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.6.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240925.0",
    "@types/bun": "latest",
    "typescript": "^5.6.0",
    "wrangler": "^3.80.0"
  }
}
